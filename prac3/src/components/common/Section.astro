---
interface Props {
  id: string;
  title: string;
}

const { id, title } = Astro.props;
---

<section
  id={id}
  data-section={id}
  class="mx-auto my-16 px-5 md:max-w-screen-md lg:px-0"
>
  <h2 class="mb-8 flex justify-center text-3xl font-bold">{title}</h2>
  <div class="text-justify [&>*]:mb-5">
    <slot />
  </div>
</section>
